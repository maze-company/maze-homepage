---
type Props = {
  imgSrc?: string
  imgAlt?: string
  member: {
    name: string
    title: string
    items: string[]
  }
}

const { imgSrc, imgAlt, member } = Astro.props as Props
---

<div class="sm:w-[340px] text-center my-8">
  <div class="flex justify-center mb-4">
    <img
      class="h-36 w-36 rounded-full border-4 border-primary"
      src={imgSrc}
      alt={imgAlt}
    />
  </div>
  <h3 class="text-xl font-bold">{member.name}</h3>
  <p class="text-lg mb-4">{member.title}</p>
  {member.items.map((item) => <p>{item}</p>)}
</div>
