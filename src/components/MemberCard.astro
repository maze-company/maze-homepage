---
type Props = {
  imgSrc?: string
  imgAlt?: string
  member: {
    name: string
    title: string
    items: string[]
  }
}

const { imgSrc, imgAlt, member } = Astro.props as Props
---

<div
  class="flex flex-col sm:flex-row items-center justify-center sm:items-end my-16 md:my-24"
>
  <img
    class="h-48 sm:h-52 md:h-60 w-48 sm:w-52 md:w-60 rounded-full border-4 border-primary"
    src={imgSrc}
    alt={imgAlt}
  />
  <div class="mx-8 md:mx-16 my-4 text-center sm:text-left">
    <h3 class="text-xl font-bold">{member.name}</h3>
    <p class="mb-4">{member.title}</p>
    {member.items.map((item) => <p>{item}</p>)}
  </div>
</div>
