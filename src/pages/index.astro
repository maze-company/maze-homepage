---
import Navbar from "../components/Navbar.astro"
import SplashImage from "../components/SplashImage.astro"
import AboutSection from "../components/AboutSection.astro"
import PressSection from "../components/PressSection.astro"
import ProjectSection from "../components/ProjectSection.astro"
import TeamSection from "../components/TeamSection.astro"
import CareerSection from "../components/CareerSection.astro"
import Footer from "../components/Footer.astro"
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>MAZE | 미로같은 문제를 풀어내는 스타트업</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gothic+A1:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-background w-full min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-grow">
      <SplashImage />
      <AboutSection />
      <PressSection />
      <ProjectSection />
      <TeamSection />
      <CareerSection />
    </main>
    <Footer />
  </body>
</html>
